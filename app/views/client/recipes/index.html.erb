<%= form_tag "/client/recipes", method: :get do %>
  <input type="text" name="search" placeholder="Search Term">
  <input type="submit" value="Go!">
<% end %>

<% @recipes.each do |recipe| %>
  <h2> <a href="/client/recipes/<%= recipe["id"] %>"> <%= recipe["title"] %></a></h2>
  <h3>Chef: <%= recipe["chef"] %></h3>
  <h4>Prep Time: <%= recipe["formatted"]["prep_time"] %></h4>
  <h4>Ingredients: <%= recipe["ingredients"] %></h4>
  <h4>Directions: <%= recipe["directions"] %></h5>
  <br>
<% end %>