<%= form_tag "/client/recipes", method: :get do %>
  <input type="text" name="search" placeholder="Search Term">
  <input type="submit" value="Go!">
<% end %>

<div class="row">
  <% @recipes.each do |recipe| %>
    <div class="col-md-4">
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="<%= recipe['image_url'] %>">
        <div class="card-body">
          <h5 class="card-title"><%= recipe["title"] %></h5>
          <p class="card-text">Chef: <%= recipe["chef"] %></p>
          <p class="card-text">Prep Time: <%= recipe["formatted"]["prep_time"] %></p>
          <a href="/client/recipes/<%= recipe["id"] %>" class="btn btn-primary">More Info</a>
        </div>
      </div>
    </div>
  <% end %>
</div>